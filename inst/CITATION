citHeader("To cite CellTrails in publications use:")

citEntry(entry = "Article",
  title        = "Transcriptional dynamics of hair-bundle morphogenesis revealed with CellTrails",
  author       = personList(as.person("Daniel C. Ellwanger"),
                   as.person("Mirko Scheibinger"),
                   as.person("Rachel A. Dumont"),
                   as.person("Peter G. Barr-Gillespie"),
                   as.person("Stefan Heller")),
  journal      = "Cell Reports",
  year         = "2018",
  volume       = "23",
  pages        = "TBD",
  note         = "doi: TBD",

  textVersion  =
  paste("Daniel C. Ellwanger, Mirko Scheibinger, Rachel A. Dumont, Peter G. Barr-Gillespie, and Stefan Heller (2018).",
        "Transcriptional dynamics of hair-bundle morphogenesis revealed with CellTrails.",
        "Cell Reports",
        "doi: doi-TBD")
)
